@model List<Application.ViewModels.ArticleViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">

        @if(Model == null || Model.Count == 0)
        {
            <h2>No hay nada aún</h2>
        }
        else
        {
            @foreach (Application.ViewModels.ArticleViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top img-product-size" src="@item.ImageUrl" />

                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text">@item.Description</p>
                            <div>
                                <small class="fw-bold fs-6">$@item.Price</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>